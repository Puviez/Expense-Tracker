<!DOCTYPE html>
<html>
  <head>
    <% include ../../partials/head.ejs %>
    <title>Dashboard</title>
  </head>
    <body>
      <% include ../../partials/menu.ejs %>
      <div class="container">
        <h1>Edit Expense</h1>
        <div class="row">
          <form class="col s12" action="/app/<%= transaction._id%>?_method=PUT" method="POST">
            <div class="row">
              <div class="input-field col s12">
                <input id="date" type="date" class="validate" name="date" value="<%= transaction.date%>">
                <label for="date">Date</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="details" type="text" class="validate" name="details" value="<%= transaction.details%>">
                <label for="details">Details</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="classification" type="text" class="validate" name="classification" value="<%= transaction.classification%>">
                <label for="classification">Classification</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="amount" type="number" class="validate" name="amount" value="<%= transaction.amount%>">
                <label for="amount">Amount</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <input id="transaction_type" type="text" class="validate" name="transaction_type" value="<%= transaction.transaction_type%>">
                <label for="transaction_type">Transcation Type</label>
              </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
            <a href="/app/history" class="waves-effect waves-light btn">Back</a>
          </form>
        </div>
    </body>
</html>