<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../../partials/head.ejs %>
    <title>Account Details</title>
  </head>
  <body>
    <% include ../../partials/menu.ejs %>
    <div class="container">
        <h1>Account Details</h1>
        <h3>Account Name: <%= account.account_name%></h3>
        <h3>Account Type: <%= account.account_type%></h3>
        <h3>Bank: <%= account.bank%></h3>
        <h3>Card Name: <%= account.card_name%></h3>
        <h3>Transaction History</h3>
        <table>
          <tr>
            <th>Date</th>
            <th>Classification</th>
            <th>Details</th>
            <th>Amount</th>
          </tr>
          <% for(let i in transaction) { %>
            <tr>
              <td><a href="./<%= transaction[i].id %>"><%= transaction[i].date %></a></td>
              <td><a href="./<%= transaction[i].id %>"><%= transaction[i].classification %></a></td>
              <td><a href="./<%= transaction[i].id %>"><%= transaction[i].details %></a></td>
              <td><a href="./<%= transaction[i].id %>">$<%= transaction[i].amount %></a></td>
            </tr>
          <% } %>
        </table>
        <a href="/acc/all" class="waves-effect waves-light btn">Back</a>
        <a href="/acc/<%= account.id %>/edit" class="waves-effect waves-light btn">Edit</a>
        <form class="waves-effect waves-light btn" action="/acc/<%= account.id %>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE ACCOUNT"/>
        </form>
    </div>
  </body>
</html>